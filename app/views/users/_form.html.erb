<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
  <h4 style ="color:red">
  <%= "The following #{pluralize(user.errors.count,'error')} prevented this user from being saved" %>
  <ul>
    <% user.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
  </h4>
  <% end %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <%= form.submit %>
<% end %>
